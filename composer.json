{
    "name": "jedamzik/statamic-toc",
    "description": "Generates a Table of Contents from Markdown Headings.",
    "type": "statamic-addon",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Njed\\Toc\\": "src"
        }
    },
    "authors": [
        {
            "name": "Nicholas Jedamzik",
            "email": "nicholas@njed.dev"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/support": "^6.8",
        "statamic/cms": "^3.0@beta",
        "league/commonmark": "^1.3.3"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.5"
    },
 	"autoload-dev": {
    	"psr-4": {
      		"Njed\\Toc\\Tests\\": "Tests"
    	}
  	},
    "extra": {
        "download-dist": {
            "url": "https://github.com/jedamzik/statamic-toc/releases/download/{$version}/dist.tar.gz",
            "path": "resources/dist"
        },
        "statamic": {
            "name": "Toc",
            "description": "Generates a Table of Contents from Markdown Headings."
        },
        "laravel": {
            "providers": [
                "Njed\\Toc\\ServiceProvider"
            ]
        }
    }
}